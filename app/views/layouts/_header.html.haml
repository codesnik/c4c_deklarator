#topBar.clearfix
  #links

#headingBar.clearfix
  .logo
    %a{:href => "#{Settings.base_url}"} Deklarator

  #authPanel
    - if User.current
      %ul
        %li
          Logged as:
          = link_to User.current.display_name, edit_user_registration_path
        %li
          = link_to 'Logout', destroy_user_session_path, :method => :delete
    - else
      %ul
        %li
          = link_to 'Login', new_user_session_path
        %li
          = link_to 'Register', new_user_registration_path